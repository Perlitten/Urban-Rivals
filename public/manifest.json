{
  "manifest_version": 3,
  "name": "Urban Rivals ML Consultant",
  "version": "1.0.0",
  "description": "AI-powered consultant providing intelligent recommendations for Urban Rivals card game battles, deck building, and market analysis",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "tabs"
  ],
  "host_permissions": [
    "*://*.urban-rivals.com/*",
    "http://localhost/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.urban-rivals.com/*",
        "https://www.urban-rivals.com/game/play/webgl/"
      ],
      "js": [
        "content.js"
      ],
      "css": [],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Urban Rivals ML Consultant",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "ml-worker-battle.js",
        "ml-worker-deck.js",
        "ml-worker-market.js",
        "assets/models/*.json",
        "assets/models/*.bin",
        "assets/images/*.png",
        "assets/images/*.jpg",
        "assets/images/*.svg"
      ],
      "matches": [
        "https://www.urban-rivals.com/*"
      ]
    },
    {
      "resources": [
        "icons/*.png",
        "ml-models/*"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ],
  "minimum_chrome_version": "88",
  "externally_connectable": {
    "matches": [
      "http://localhost/*",
      "http://127.0.0.1/*",
      "file:///D:/Urban%20Rivals/demo.html"
    ]
  }
}
